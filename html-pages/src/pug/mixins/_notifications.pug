mixin notification__error(text)
    div.notification__error #{text}

mixin notification__error--text(text, link)
    div.notification__error--text
        div.notification__error.notification__error--top.notification__error--top-border-radius #{text}
        span.mb-20 Используйте другой email чтобы создать новый аккаунт
        span Или воспользуйтесь #[a(href="#{link}") восстановлением пароля], чтобы войти на сайт.

mixin notification__success(text)
    div.notification__success #{text}

mixin notification__notify(text)
    div.notification__notify #{text}